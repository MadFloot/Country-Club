@model IEnumerable<projecto.Model.IngresoViewModel>

@{
    ViewBag.Title = "Sistema de Control de Ingreso | Country Club Costa Rica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid min-vh-100 bg-light">
    <div class="row g-0">

        <!-- SIDEBAR -->
        <aside class="col-12 col-md-3 col-lg-2 bg-white border-end d-flex flex-column p-3">

            <div class="text-center mb-4">
                <img src="~/assets/images/Logo Arbol Country Verde.png"
                     class="img-fluid mb-2"
                     style="max-width:70px;">
                <h6 class="fw-bold mb-0" style="color: var(--cc-verde);">
                    Country Club
                </h6>
                <small class="text-muted">Costa Rica</small>
            </div>

            <h6 class="text-uppercase text-muted small mb-2">Registrar ingreso</h6>
            <div class="d-grid gap-2 mb-4">
                <button class="btn btn-outline-success"
                        data-bs-toggle="modal"
                        data-bs-target="#modalSocio">
                    Registrar ingreso de socio
                </button>
            </div>

            <button class="btn btn-danger mt-auto w-100">
                Salir
            </button>
        </aside>

        <!-- MAIN -->
        <main class="col-12 col-md-9 col-lg-10 p-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-0">
                        Sistema de Control de Ingreso
                    </h4>
                    <small class="text-muted">Country Club Costa Rica</small>
                </div>

                <span class="badge rounded-pill px-3 py-2"
                      style="background-color: var(--cc-verde);">
                    CRCC
                </span>
            </div>

            <!-- TABLA DINÁMICA -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">

                    <div class="table-responsive">
                        <table class="table table-hover align-middle text-center mb-0">
                            <thead style="background-color: var(--cc-verde); color:white;">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Nombre</th>
                                    <th>Fecha</th>
                                    <th>Identificación</th>
                                    <th>ID</th>
                                </tr>
                            </thead>
                            <tbody id="tablaIngresos">
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>Socio</td>
                                            <td>@item.NombreCompleto</td>
                                            <td>@item.FechaIngreso.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@item.Identificacion</td>
                                            <td>@item.IdSocio</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

            <footer class="mt-4 text-muted small d-flex flex-wrap justify-content-between">
                <span>Equipo: TI03 | Puerto: COM9</span>
                <span>Ubicación: PUESTO67</span>
                <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
            </footer>

        </main>
    </div>
</div>

@Html.Partial("_RegistrarSocio")

<div class="modal fade" id="modalDetalleSocio">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="contenedorDetalleSocio">
        </div>
    </div>
</div>

<script>
    function registrarIngreso(idSocio) {
        $.post("/Ingresos/Registrar", { id: idSocio }, function (data) {
            $("#tablaIngresos").prepend(data);
        });
    }

    function verDetalleSocio(id) {

        $.get("/Socios/Detalle", { id: id }, function (data) {

            $("#contenedorDetalleSocio").html(data);

            var modal = new bootstrap.Modal(document.getElementById('modalDetalleSocio'));
            modal.show();

        });
    }
</script>
